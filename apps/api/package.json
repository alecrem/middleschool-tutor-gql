{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run convert-data && tsc && mkdir -p dist/assets && cp src/assets/cards.json dist/assets/",
    "start": "node dist/index.js",
    "convert-data": "tsx src/csv-to-json.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "lint:ci": "biome lint --reporter=github src/"
  },
  "dependencies": {
    "@hono/node-server": "^1.0.0",
    "graphql": "^16.8.0",
    "graphql-yoga": "^5.0.0",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
